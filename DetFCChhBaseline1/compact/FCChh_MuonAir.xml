<?xml version="1.0" encoding="UTF-8"?>
<lccdd xmlns:compact="http://www.lcsim.org/schemas/compact/1.0"
       xmlns:xs="http://www.w3.org/2001/XMLSchema"
       xs:noNamespaceSchemaLocation="http://www.lcsim.org/schemas/compact/1.0/compact.xsd">

  <info name="FCC"
        title="Air Volume to replace muon system"
        author="J. Lingemann"
        url="no"
        status="development"
        version="$Id:??$">
    <comment>Muon System Place-Holder</comment>
  </info>
  <display>
    <vis name="MuonEnvelopeFwdBarVis" r="0.90" g="0.72" b="0.48" a="0.2" showDaughters="false" visible="true"/>
  </display>
  <detectors>
    <!-- End-caps -->
    <detector name="MuonEnvelopeFwdBarPos" type="SimpleCylinder"  vis="MuonEnvelopeFwdBarVis">
        <status id="0"/>
        <comment>Envelope for Muon positive end-cap</comment>
        <dimensions rmin="FwdBarMuon_rmin" rmax="FwdBarMuon_rmax" dz="FwdBarMuon_dz" phi0="0" deltaphi="360*deg" z_offset="FwdBarMuon_zOffset" material="Air"/>
    </detector>
    <detector name="MuonEnvelopeFwdBarNeg" type="SimpleCylinder"  vis="MuonEnvelopeFwdBarVis">
        <status id="0"/>
        <comment>Envelope for Muon positive end-cap</comment>
        <dimensions rmin="FwdBarMuon_rmin" rmax="FwdBarMuon_rmax" dz="FwdBarMuon_dz" phi0="0" deltaphi="360*deg" z_offset="FwdBarMuon_zOffset" material="Air"/>
    </detector>
  </detectors>
</lccdd>
