<?xml version="1.0" encoding="UTF-8"?>
<lccdd xmlns:compact="http://www.lcsim.org/schemas/compact/1.0"
       xmlns:xs="http://www.w3.org/2001/XMLSchema"
       xs:noNamespaceSchemaLocation="http://www.lcsim.org/schemas/compact/1.0/compact.xsd">

  <info name="FCC"
        title="Air Volume to replace muon system"
        author="J. Lingemann"
        url="no"
        status="development"
        version="$Id:??$">
    <comment>Muon System Place-Holder</comment>
  </info>
  <display>
    <vis name="MuonEnvelopeEndCapInnerVis" r="0.91" g="0.64" b="0.29" a="0.2" showDaughters="false" visible="true"/>
  </display>
  <detectors>
    <detector name="MuonEnvelopeEndcapInnerPos" type="SimpleCone"  vis="MuonEnvelopeEndCapInnerVis">
      <comment>Envelope for Muon inner end-cap</comment>
      <dimensions rmin1="EndCapInnerMuon_rmin1" rmax1="EndCapInnerMuon_rmax1" rmin2="EndCapInnerMuon_rmin2" rmax2="EndCapInnerMuon_rmax2" dz="EndCapInnerMuon_dz" z_offset="EndCapInnerMuon_zOffset" material="Air"/>
    </detector>
    <detector name="MuonEnvelopeEndcapInnerNeg" type="SimpleCone"  vis="MuonEnvelopeEndCapInnerVis">
      <comment>Envelope for Muon inner end-cap</comment>
      <dimensions rmin2="EndCapInnerMuon_rmin1" rmax2="EndCapInnerMuon_rmax1" rmin1="EndCapInnerMuon_rmin2" rmax1="EndCapInnerMuon_rmax2" dz="EndCapInnerMuon_dz" z_offset="-EndCapInnerMuon_zOffset" material="Air"/>
    </detector>
  </detectors>
</lccdd>
