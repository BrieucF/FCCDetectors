

<?xml version="1.0" encoding="UTF-8"?>
<lccdd xmlns:compact="http://www.lcsim.org/schemas/compact/1.0"
       xmlns:xs="http://www.w3.org/2001/XMLSchema"
       xs:noNamespaceSchemaLocation="http://www.lcsim.org/schemas/compact/1.0/compact.xsd">

  <info name="FCC"
        title="A material approximation of the HCal"
        author="J. Lingemann"
        url="no"
        status="development"
        version="1.0">
    <comment>HCal material end cap approximation</comment>
  </info>
  <define>
    <constant name="ExtBarSupport_dr" value="200*mm"/>
    <constant name="ExtBarInner_rmax" value="ExtBarHCal_rmax2 - ExtBarSupport_dr"/>
  </define>
  <detectors>
    <!-- E N D C A P S -->
    <detector name="HCalPreShowerPos" type="SimpleLayeredCylinder" vis="HCalEnvVis">
      <dimensions rmin="ExtBarHCal_rmin1" rmax="ExtBarHCal_rmax1" dz="ExtBarHCal_dz1" z_offset="ExtBarHCal_zOffset1" material="Air"/>
      <layer rmin="ExtBarHCal_rmin1" rmax="ExtBarInner_rmax" dz="ExtBarHCal_dz1" z_offset="0*cm" material="HC" vis="HCalVis"/>
      <layer rmin="ExtBarInner_rmax" rmax="ExtBarHCal_rmax1" dz="ExtBarHCal_dz1" z_offset="0*cm" material="Iron" vis="HCalIronVis"/>
    </detector>
    <detector name="HCalEndCapPos" type="SimpleLayeredCylinder" vis="HCalEnvVis">
      <dimensions rmin="ExtBarHCal_rmin2" rmax="ExtBarHCal_rmax2" dz="ExtBarHCal_dz2" z_offset="ExtBarHCal_zOffset2" material="Air"/>
      <layer rmin="ExtBarHCal_rmin2" rmax="ExtBarInner_rmax" dz="ExtBarHCal_dz2" z_offset="0*cm" material="HC" vis="HCalVis"/>
      <layer rmin="ExtBarInner_rmax" rmax="ExtBarHCal_rmax2" dz="ExtBarHCal_dz2" z_offset="0*cm" material="Iron" vis="HCalIronVis"/>
    </detector>

    <detector name="HCalPreShowerNeg" type="SimpleLayeredCylinder" vis="HCalEnvVis">
      <dimensions rmin="ExtBarHCal_rmin1" rmax="ExtBarHCal_rmax1" dz="ExtBarHCal_dz1" z_offset="-ExtBarHCal_zOffset1" material="Air"/>
      <layer rmin="ExtBarHCal_rmin1" rmax="ExtBarInner_rmax" dz="ExtBarHCal_dz1" z_offset="0*cm" material="HC" vis="HCalVis"/>
      <layer rmin="ExtBarInner_rmax" rmax="ExtBarHCal_rmax1" dz="ExtBarHCal_dz1" z_offset="0*cm" material="Iron" vis="HCalIronVis"/>
    </detector>
    <detector name="HCalEndCapNeg" type="SimpleLayeredCylinder" vis="HCalEnvVis">
      <dimensions rmin="ExtBarHCal_rmin2" rmax="ExtBarHCal_rmax2" dz="ExtBarHCal_dz2" z_offset="-ExtBarHCal_zOffset2" material="Air"/>
      <layer rmin="ExtBarHCal_rmin2" rmax="ExtBarInner_rmax" dz="ExtBarHCal_dz2" z_offset="0*cm" material="HC" vis="HCalVis"/>
      <layer rmin="ExtBarInner_rmax" rmax="ExtBarHCal_rmax2" dz="ExtBarHCal_dz2" z_offset="0*cm" material="Iron" vis="HCalIronVis"/>
    </detector>
  </detectors>
</lccdd>
