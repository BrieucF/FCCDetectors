<?xml version="1.0" encoding="UTF-8"?>
<lccdd xmlns:compact="http://www.lcsim.org/schemas/compact/1.0"
       xmlns:xs="http://www.w3.org/2001/XMLSchema"
       xs:noNamespaceSchemaLocation="http://www.lcsim.org/schemas/compact/1.0/compact.xsd">

  <info name="FCC"
        title="Air Volume to replace Ecal"
        author="J. Lingemann"
        url="no"
        status="development"
        version="$Id:??$">
    <comment>ECal Place-Holder</comment>
  </info>
  <display>
    <vis name="ECalEnvelopeVis" r="0.7" g="0.3" b="0.3" showDaughters="false" visible="true"/>
  </display>

  <detectors>
    <detector name="ECalEnvelope" type="SimpleCylinder"  vis="ECalEnvelopeVis">
      <status id="0"/>
      <comment>Envelope for ECal</comment>
      <dimensions rmin="BarECal_rmin" rmax="BarECal_rmax" dz="BarECal_dz" phi0="0" deltaphi="360*deg" z_offset="0*cm" material="Air"/>
    </detector>
  </detectors>
</lccdd>
