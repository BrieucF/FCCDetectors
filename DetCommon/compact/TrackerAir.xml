<?xml version="1.0" encoding="UTF-8"?>
<lccdd xmlns:compact="http://www.lcsim.org/schemas/compact/1.0"
       xmlns:xs="http://www.w3.org/2001/XMLSchema"
       xs:noNamespaceSchemaLocation="http://www.lcsim.org/schemas/compact/1.0/compact.xsd">

  <info name="FCC"
        title="Air Volume to replace the Tracker"
        author="J. Lingemann"
        url="no"
        status="development"
        version="$Id:??$">
    <comment>Tracker Place-Holder</comment>
  </info>
  <display>
    <vis name="TrackerEnvelopeVis" r="0.3" g="0.3" b="0.7" showDaughters="false" visible="true"/>
  </display>

  <detectors>
    <detector name="TrackerEnvelopeBarrel" type="SimpleCylinder"  vis="TrackerEnvelopeVis">
      <status id="0"/>
      <comment>Envelope for Tracker in the barrel</comment>
      <dimensions rmin="BarHCal_rmin" rmax="BarHCal_rmax" dz="BarHCal_dz" phi0="0" deltaphi="360*deg" z_offset="0*cm" material="Air"/>
    </detector>
    <detector name="TrackerEnvelopeEndcapNeg" type="SimpleCylinder"  vis="TrackerEnvelopeVis">
      <status id="0"/>
      <comment>Envelope for Tracker in the barrel</comment>
      <dimensions rmin="EndCapTracker_rmin" rmax="EndCapTracker_rmax" dz="EndCapTracker_dz" phi0="0" deltaphi="360*deg" z_offset="nEndCapTracker_zpos" material="Air"/>
    </detector>
    <detector name="TrackerEnvelopeEndcapPos" type="SimpleCylinder"  vis="TrackerEnvelopeVis">
      <status id="0"/>
      <comment>Envelope for Tracker in the barrel</comment>
      <dimensions rmin="EndCapTracker_rmin" rmax="EndCapTracker_rmax" dz="EndCapTracker_dz" phi0="0" deltaphi="360*deg" z_offset="pEndCapTracker_zpos" material="Air"/>
    </detector>
  </detectors>
</lccdd>
