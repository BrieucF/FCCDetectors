<?xml version="1.0" encoding="UTF-8"?>
<lccdd xmlns:compact="http://www.lcsim.org/schemas/compact/1.0"
  xmlns:xs="http://www.w3.org/2001/XMLSchema"
  xs:noNamespaceSchemaLocation="http://www.lcsim.org/schemas/compact/1.0/compact.xsd">

  <info name="FCChh_ECalBarrel_Mockup_NoCryostat"
    title="ECal Barrel Calorimeter without cryostat"
    author="A.Dell'Acqua, J.Faltova"
    url="no"
    status="development"
    version="$Id:??$">
    <comment>ECal test geometry without cryostat. Active volume is the same as in the case with cryostat in front. </comment>
  </info>

  <define>
    <include ref="FCChh_ECalBarrel_Common.xml" />
  </define>

  <display>
    <vis name="ecal_envelope" r="0.1" g="0.2" b="0.6" alpha="1" showDaughers="false" visible="true" />
  </display>

  <readouts>
    <readout name="ECalHitsPhiEta">
      <segmentation type="GridPhiEta" grid_size_eta="0.01" phi_bins="629"/>
      <id>system:3,ECAL_Cryo:1,bath:1,EM_barrel:1,active_layer:9,eta:-9,phi:-10</id>
    </readout>

  </readouts>

  <detectors>
    <detector id="BarECal_id" name="ECalBarrel" type="EmCaloBarrel" readout="ECalHitsPhiEta">
      <sensitive type="SimpleCalorimeterSD"/>
      <dimensions rmin="BarCryoECal_rmin" rmax="BarCryoECal_rmax" dz="BarCryoECal_dz" vis="ecal_envelope"/>
      <cryostat name="ECAL_Cryo" material="Aluminum" >
	<dimensions rmin="BarCryoECal_rmin" rmax="BarCryoECal_rmax" dz="BarCryoECal_dz" thickness="-1" />
      </cryostat>
      <calorimeter name="EM_barrel" >
	<dimensions rmin="EMBarrel_rmin" rmax="EMBarrel_rmax" dz="EMBarrel_dz" />
	<active_layers thickness="4*mm" material="LAr" />
	<passive_layers thickness="2*mm" material="Lead" />
      </calorimeter>
    </detector>
    
  </detectors>
</lccdd>

